<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCustonadapterTarifa"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:text="@string/lin_tarifa"
        android:layout_below="@+id/imageViewEmpresa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignRight="@+id/btRotasExpand"
        android:layout_alignEnd="@+id/btRotasExpand" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewEmpresa"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvCustonadapterTarifa"
        android:layout_alignStart="@+id/tvCustonadapterTarifa" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lin_verhorarios"
        android:drawableLeft="@drawable/ic_query_builder_black_36dp"
        android:id="@+id/btHorariosExpand"
        android:layout_below="@+id/tvCustonadapterTarifa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lin_verrotas"
        android:drawableLeft="@drawable/ic_directions_black_36dp"
        android:id="@+id/btRotasExpand"
        android:layout_alignTop="@+id/btHorariosExpand"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewOnibus"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewEmpresa"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_above="@+id/tvCustonadapterTarifa" />

</RelativeLayout>