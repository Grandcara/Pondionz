<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue50">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/linearLayout"
        android:background="@color/blue700">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lin_linhas"
            android:id="@+id/textView3"
            android:layout_marginTop="10dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/blue50"
            android:background="@color/blue700"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lin_mais_info"
            android:id="@+id/textView5"
            android:textSize="12dp"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold|italic"
            android:gravity="right"
            android:textColor="@color/blue50"
            android:background="@color/blue700" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spinner" />

    </LinearLayout>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvLinha"
        android:background="@color/blue50"
        android:divider="@color/blue200"
        android:dividerHeight="0dp"
        android:layout_below="@+id/linearLayout" />

</RelativeLayout>